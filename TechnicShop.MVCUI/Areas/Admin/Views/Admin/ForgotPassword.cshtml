<body class="hold-transition login-page">
    <div class="login-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a class="h1"><b>Tecnical</b>SHOP</a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Şifrenizi mi unuttunuz? Burada kolayca yeni bir şifre alabilirsiniz.</p>
                <form id="frmforgotPassword" asp-antiforgery="true">
                    @*@Html.AntiForgeryToken()*@
                    <div class="input-group mb-3">
                        <input asp-for="EmailOrPhoneNumber" type="text" class="form-control" placeholder="Email veya Telefon Numarası Giriniz">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="EmailOrPhoneNumber"></span>
                    <div class="row">
                        <div class="col-12">
                            <button type="button" id="btnforgotpassword" class="btn btn-primary btn-block">Yeni Bir Şifre Talep Et</button>
                        </div>
                        <!-- /.col -->
                    </div>
                    <span id="mesaj"></span>
                </form>
                <p class="mt-3 mb-1">
                    <a href="/Admin/Admin/LogIn">Login</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/admin/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/admin/dist/js/adminlte.min.js"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(
            function () {
                $("#btnforgotpassword").click(
                    function() {

                        var form = $("#frmforgotPassword");

                        //var model={
                        //    EmailOrPhoneNumber : $("#Email").val(),
                        //    EmailOrPhoneNumber:$("#PhoneNumber").val()
                        //}

                        //var token = $('input[name="__RequestVerificationToken"]').val();

                        if ($("#frmforgotPassword").valid()){
                            $.ajax({
                                url: "/Admin/Admin/ForgotPassword",
                                method: "post",
                                data: form.serialize, /*{ __RequestVerificationToken: token, forgotPasswordViewModel: model   },*/
                                DataType:"json",
                                success:function(r) {
                                    if(r.result){
                                        $("#mesaj").html(r.mesaj);
                                    }
                                },
                                error:function () {

                                }
                            });
                        }




                    });
            });




